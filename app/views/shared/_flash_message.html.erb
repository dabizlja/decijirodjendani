<% styles = case type.to_sym
   when :notice, :success
     { icon: "✅", classes: "bg-green-50 border-green-200 text-green-800" }
   when :alert, :error
     { icon: "❌", classes: "bg-red-50 border-red-200 text-red-800" }
   when :warning
     { icon: "⚠️", classes: "bg-amber-50 border-amber-200 text-amber-800" }
   else
     { icon: "ℹ️", classes: "bg-blue-50 border-blue-200 text-blue-800" }
   end %>
<div data-controller="flash"
     data-flash-timeout-value="5000"
     class="pointer-events-auto flex w-full max-w-2xl items-center gap-3 rounded-2xl border px-4 py-3 shadow-lg backdrop-blur bg-white/90 transition opacity-100 <%= styles[:classes] %>">
  <span class="text-xl"><%= styles[:icon] %></span>
  <p class="flex-1 text-sm font-medium leading-relaxed text-gray-900"><%= message %></p>
  <button type="button"
          class="text-gray-400 hover:text-gray-600 transition"
          aria-label="Zatvori obaveštenje"
          data-action="flash#dismiss">
    ×
  </button>
</div>
